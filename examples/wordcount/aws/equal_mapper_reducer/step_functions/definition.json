{
  "Comment": "MapReduce wordcount with equal number of mappers and reducers",
  "StartAt": "Count",
  "States": {
    "Count": {
      "Type": "Map",
      "ItemsPath": "$.chunks",
      "MaxConcurrency": 0,
      "Next": "Summary",

      "Iterator": {
        "StartAt": "Mapper",
        "States": {
          "Mapper": {
            "Type": "Task",
            "Resource": "arn:aws:lambda:us-west-1:908344970015:function:wc-equalMR-map-step-functions",
            "Next": "Reducer"
          },
          "Reducer": {
            "Type": "Task",
            "Resource": "arn:aws:lambda:us-west-1:908344970015:function:wc-equalMR-reduce-step-functions",
            "End": true
          }
        }
      }

    },
    "Summary": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:us-west-1:908344970015:function:wc-equalMR-summary-step-functions",
      "End": true
    }
  }
}
